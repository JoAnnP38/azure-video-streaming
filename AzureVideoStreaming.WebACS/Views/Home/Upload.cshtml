@{
    ViewBag.Title = "Upload";
}

<h2>Upload</h2>
<div class="col-lg-6" style="float:left;">
    <form role="form" action="" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="videoname">Video title</label>
            <input type="text" class="form-control" id="videoname" name="title" placeholder="Video name">
        </div>
        <div class="form-group">
            <label for="videodescription">Video description</label>
            <textarea class="form-control" id="videodescription" name="description" placeholder="Video description"> </textarea>
</div>
        <div class="form-group">
            <label for="videofile">Pick video</label>
            <input type="file" id="file" name="file">
            <p class="help-block">Select file to upload</p>
        </div>
        <button type="submit" class="btn btn-default">Upload</button>
    </form>
</div>